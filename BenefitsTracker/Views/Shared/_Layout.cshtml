<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>Benefits Trackers | @ViewBag.Title</title>

    <meta name="description" content="Web App allow manager to add employees and monitor benefit costs.">
    <meta name="author" content="Nathan Pearson">

    <!--Mobile specific from webdesign tuts-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- PAGELOAD HACK FROM HTML5BP Should not be necessary -->
    <!--[if IE]><![endif]-->

    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/mvc-grid.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css?v=1.0">

    <!-- TODO ADD THESE FILES -->
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
    <![endif]-->
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

</head>

<body>
    <header class="container-fluid bg-dark">
        <nav class="navbar navbar-dark navbar-expand-md">
            <h1 class="navbar-brand">Benefits Tracker</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Review">Review</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="AddEmployee">Add</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <section class="container">@RenderBody()</section>

    <footer class="container-fluid bg-dark">
        <div class="text-center copy">Created by NMP &copy;@DateTime.Now.Year</div>
    </footer>
    <environment names="Developement">
        <script src="~/node_modules/jquery/dist/jquery.js"></script>
        <script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script 
            src="//ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js" 
            asp-fallback-src="~/node_modules/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"></script>
        <script 
            src="//ajax.aspnetcdn.com/ajax/bootstrap/4.1.1/bootstrap.min.js" 
            asp-fallback-src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"></script>
    </environment>
        <script src="~/js/mvc-grid.js"></script>

        <script>
            [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
                new MvcGrid(element);
            });
        </script>
        <script src="~/js/scripts.js"></script>

    @RenderSection("scripts", false)
</body>
</html>

